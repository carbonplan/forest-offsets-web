{
  "routes": [
    {
      "route": "/login/aad",
      "serve": "/.auth/login/aad",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/login/github",
      "serve": "/.auth/login/github",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "platformErrorOverrides": [
    {
      "errorType": "Unauthenticated",
      "statusCode": "302",
      "serve": "/login/aad"
    }
  ],
  "defaultHeaders": {
    "Referrer-Policy": ""
  }
}